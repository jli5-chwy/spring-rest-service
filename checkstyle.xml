<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <module name="TreeWalker">
        <!-- Enforce that there are no tab characters in the file -->
        <module name="FileTabCharacter">
            <property name="eachLine" value="true"/>
        </module>

        <!-- Check for the presence of Javadoc comments on public classes and methods -->
        <module name="JavadocType"/>
        <module name="JavadocMethod"/>

        <!-- Enforce a naming convention for classes -->
        <module name="TypeName"/>
        <module name="MethodName"/>
        <module name="ParameterName"/>
        <module name="LocalVariableName"/>

        <!-- Limit the number of lines in a file -->
        <module name="FileLength">
            <property name="max" value="2000"/>
        </module>

        <!-- Limit the number of lines in a method -->
        <module name="MethodLength">
            <property name="max" value="100"/>
        </module>
    </module>
</module>

